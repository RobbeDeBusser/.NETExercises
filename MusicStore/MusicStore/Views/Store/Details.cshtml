@model MusicStore.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Album Details</h1>

<div>
    <h4>@Html.DisplayFor(model=>model.Title)</h4>
    <hr />
    <div class="column">
        <div class="col-sm-10">
            <img src="~/content/@Html.DisplayFor(model => model.AlbumArtUrl)" />
        </div>
        <p class="col-sm-2">
            <i>@Html.DisplayNameFor(model => model.Genre):</i> @Html.DisplayFor(model => model.Genre.Name)
        </p>
        <p class="col-sm-2">
            <i>@Html.DisplayNameFor(model => model.Artist):</i> @Html.DisplayFor(model => model.Artist.Name)
        </p>
        <p class="col-sm-2">
            <i>@Html.DisplayNameFor(model => model.Price):</i> @Html.DisplayFor(model => model.Price)
        </p>
        <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@(Model.AlbumID)">Add to cart</a>
        <a asp-controller="Home" asp-action="Index">Back to List</a>
    </div>
</div>
