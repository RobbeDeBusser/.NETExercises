@model IEnumerable<MusicStore.Models.Genre>
@{
    ViewData["Title"] = "Genres";

}
<h2>Select</h2>
<div class="row">
<div class="col-md-4">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Store" asp-action="ListAlbums" asp-route-id="@(item.GenreID)">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>