@model IEnumerable<MusicStore.Models.Genre>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Genres
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            @foreach (var genre in Model)
            {
                <a class="dropdown-item" asp-area="" asp-controller="Store" asp-action="ListAlbum" asp-route-id="@(genre.GenreID)">@(genre.Name)</a>
            }
            <div class="dropdown-divider"></div>
            <a asp-area="" asp-controller="Store" asp-action="ListGenres" class="dropdown-item">More...</a>
        </div>
    </li>