@model IEnumerable<MusicStore.Models.Album>
@{
    ViewData["Title"] = "Home Page";
}

<br />

<div class="text-center">
    <div class="jumbotron" style="background-color:lightblue; padding:40px 40px 40px 40px">
        <div class="jumbotron" style="background-color: aliceblue">
            <img src="~/images/logo.png" class="rounded" width="400"  />
        </div>
    </div>
    <div class="d-flex flex-row">
        @foreach(var item in Model)
        {
            <a class="col-2" asp-controller="Store" asp-action="Details" asp-route-id="@item.AlbumID">
                <img class="h-50" src="~/content/@(item.AlbumArtUrl)" />
                <p>@item.Title</p>
            </a>
        }
    </div>
</div>