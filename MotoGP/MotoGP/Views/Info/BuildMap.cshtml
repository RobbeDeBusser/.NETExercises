@model IEnumerable<MotoGP.Models.Race>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Races on map";
}

<img src="~/images/banners/map.png" alt="Race Map" usemap="#raceMap" />

<map name="raceMap">
    @foreach (var race in Model)
    {
        <area shape="circle" coords="@race.X,@race.Y,10" href="@Url.Action("ShowRace", "Info", new { id = race.RaceID })" alt="@race.Name" />
    }
</map>

<a asp-controller="Home" asp-action="Menu">Back</a>